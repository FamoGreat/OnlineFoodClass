@model Course

@{
    ViewData["Title"] = "Delete Course";
}

<div class="container mt-5 d-flex justify-content-center">
    <div class="card bg-light mb-3" style="width: 60rem;">
        <div class="card-header">Delete Course</div>
        <div class="card-body">
            <h4 class="card-title">Are you sure you want to delete this course?</h4>
            <div class="row">
                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-4">Course Name</dt>
                        <dd class="col-sm-8">@Model.Name</dd>

                        <dt class="col-sm-4">Description</dt>
                        <dd class="col-sm-8">@Model.Description</dd>

                        <dt class="col-sm-4">Price</dt>
                        <dd class="col-sm-8">@Model.Price</dd>

                        <dt class="col-sm-4">Start Date</dt>
                        <dd class="col-sm-8">@Model.StartDate.ToString("yyyy-MM-dd")</dd>

                        <dt class="col-sm-4">End Date</dt>
                        <dd class="col-sm-8">@Model.EndDate.ToString("yyyy-MM-dd")</dd>

                        <dt class="col-sm-4">Location</dt>
                        <dd class="col-sm-8">@Model.Location</dd>

                        <dt class="col-sm-4">Schedule</dt>
                        <dd class="col-sm-8">@Model.Schedule</dd>
                    </dl>

                    <form asp-action="Delete" asp-controller="Course" method="post">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-primary">Delete</button>
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    </form>
                </div>
                <div class="col-md-4">
                    <h5 class="card-title">Preview</h5>
                    <img id="imagePreview" src="@Model.ImageUrl" class="img-fluid" alt="Course Image Preview" style="max-width: 100%;">
                </div>
            </div>
        </div>
    </div>
</div>
