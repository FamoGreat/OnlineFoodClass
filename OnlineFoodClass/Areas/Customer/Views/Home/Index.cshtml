@model IEnumerable<Course>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <div class="row">
        @foreach (var course in Model)
        {
            <div class="col-md-4 mb-3">
                <a asp-action="Details" asp-route-id="@course.Id" class="card-link" style="text-decoration: none; color: inherit;">
                    <div class="card mb-3">
                        <img src="@course.ImageUrl" class="d-block user-select-none" width="100%" height="200" alt="Course Image" style="object-fit: cover;">

                        <div class="card-body">
                            <h3 class="card-text text-decoration-underline"><strong>@course.Name</strong></h3>
                            <p class="card-text">@course.Description.Substring(0, 100)...</p>
                            <h6 class="card-subtitle text-muted">Price: <strong>Tshs @course.Price</strong></h6>
                            <p class="card-text">
                                Last updated @course.EndDate.ToString("yyyy-MM-dd")
                            </p>
                        </div>
                    </div>
                </a>

            </div>
        }
    </div>
</div>
