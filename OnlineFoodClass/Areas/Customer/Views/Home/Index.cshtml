@model OnlineFoodClass.Models.HomeViewModel

@{
    ViewData["Title"] = "Online Food Class";
}

<div class="hero">
    <h1>Welcome to Online Food Class</h1>
    <p>Learn to cook delicious meals from the comfort of your home.</p>
    <a href="#" class="btn">Get Started</a>
</div>

<div class="features">
    <h2>Why Choose Us?</h2>
    <div class="row">
        <div class="col-md-4 feature-item">
            <img src="~/images/feature/wabishi.jpeg" alt="Feature 1">
            <h3>Expert Chefs</h3>
            <p>Learn from the best chefs around the world.</p>
        </div>
        <div class="col-md-4 feature-item">
            <img src="~/images/feature/ratiba.jpeg" alt="Feature 2">
            <h3>Flexible Schedule</h3>
            <p>Access courses at any time that suits you.</p>
        </div>
        <div class="col-md-4 feature-item">
            <img src="~/images/feature/support.jpeg" alt="Feature 3">
            <h3>Community Support</h3>
            <p>Join a community of food enthusiasts.</p>
        </div>
    </div>
</div>

<div class="courses">
    <h2>Our Courses</h2>
    <div class="row">
        @foreach (var course in Model.Courses)
        {
            <div class="col-md-4 course-item">
                <img src="@course.ImageUrl" alt="@course.Name">
                <h3>@course.Name</h3>
                <p>@course.Description.Substring(0, 60)...</p>
                <a href="@Url.Action("Details", "CustomerCourse", new { id = course.Id })" class="btn">Learn More</a>
            </div>
        }
    </div>
</div>

<div class="testimonials">
    <h2>What Our Students Say</h2>
    <div id="testimonialCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            @foreach (var testimonial in Model.Testimonials)
            {
                <div class="carousel-item @(Model.Testimonials.IndexOf(testimonial) == 0 ? "active" : "")">
                    <div class="testimonial-item text-center">
                        <img src="@testimonial.ImageUrl" class="rounded-circle" alt="@testimonial.Name">
                        <h3>@testimonial.Name</h3>
                        <p>@testimonial.Comment</p>
                    </div>
                </div>
            }
        </div>
        <a class="carousel-control-prev" href="#testimonialCarousel" role="button" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </a>
        <a class="carousel-control-next" href="#testimonialCarousel" role="button" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </a>
    </div>
</div>
